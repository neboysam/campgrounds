<% layout('layouts/boilerplate')%>

<h1>All Cheeses</h1>
<div>
    <a href="/cheeses/new">Add Cheese</a>
</div>
<% for (let cheese of cheeses){%>
<div class="card mb-4">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=cheese.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= cheese.title %> </h5>
                <p class="card-text"><%= cheese.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= cheese.location%></small>
                </p>
                <a class="btn btn-primary" href="/cheeses/<%=cheese._id%>">View <%=cheese.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>